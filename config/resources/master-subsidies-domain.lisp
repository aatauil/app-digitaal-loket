(define-resource subsidie-aanvraag ()
  :class (s-prefix "subsidie:Aanvraag")
  :properties `((:aangevraagd-bedrag :number ,(s-prefix "subsidie:aangevraagdBedrag"))
                (:aanvraagdatum :datetime ,(s-prefix "subsidie:aanvraagdatum"))
                (:can-be-paid-on-known-bank-account :bool ,(s-prefix "lblodSubsidie:canBePaidOnKnownBankAccount")))
  :has-one `((bestuurseenheid :via ,(s-prefix "pav:createdBy")
                              :as "bestuurseenheid")
             (contact-point :via ,(s-prefix "schema:contactPoint")
                            :as "contact-point")
             (bank-account :via ,(s-prefix "schema:bankAccount")
                           :as "bank-account")
             (time-block :via ,(s-prefix "dbpedia:TimePeriod")
                         :as "time-block"))
  :resource-base (s-url "http://data.lblod.info/subsidie-aanvragen/")
  :features '(include-uri)
  :on-path "subsidie-aanvragen")

(define-resource contact-point ()
  :class (s-prefix "schema:ContactPoint")
  :properties `((:email :string ,(s-prefix "schema:email"))
                (:name :string ,(s-prefix "foaf:name"))
                (:phone :string ,(s-prefix "schema:telephone")))
  :resource-base (s-url "http://data.lblod.info/contact-points/")
  :features '(include-uri)
  :on-path "contact-points")

(define-resource bank-account ()
  :class (s-prefix "schema:BankAccount")
  :properties `((:bank-account-number :string ,(s-prefix "schema:identifier")))
  :resource-base (s-url "http://data.lblod.info/bank-accounts/")
  :features '(include-uri)
  :on-path "bank-accounts")

(define-resource time-block ()
  :class (s-prefix "dbpedia:TimePeriod")
  :properties `((:label :string ,(s-prefix "skos:prefLabel"))
                (:start :date ,(s-prefix "dbpedia:start"))
                (:end :date ,(s-prefix "dbpedia:end")))
  :resource-base (s-url "http://data.lblod.info/time-blocks/")
  :features '(include-uri)
  :on-path "time-blocks")
